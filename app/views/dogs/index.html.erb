<div id="notice"><%= notice %></div>

<h1>My Dogs</h1>

<%= link_to "Add a New Dog", new_dog_path, class: 'btn btn-info' %>

<table class="table table-striped table-hover">
 <thead>
  <tr>
   <th>ID</th>
   <th>Name</th>
   <th>Owner</th>
   <th>Breed</th>
   <th>Age</th>
   <th colspan="3">Actions</th>
  </tr>
 </thead>

 <tbody>
  <% @dogs.each do |puppy| %>
   <tr>
    <td><%= puppy.id %></td>
    <td><%= puppy.name %></td>
    <td><%= puppy.owner.try(:name) %></td>
    <td><%= puppy.breed %></td>
    <td><%= puppy.age %></td>
    <td><%= link_to "See details", dog_path(puppy) %></td>
    <td><%= link_to "Edit", edit_dog_path(puppy) %></td>
    <td><%= link_to "Delete", puppy, method: :delete, data: { confirm: "Are you sure?" } %></td>
   </tr>

  <% end %>

 </tbody>

</table>

<br>
<br>
<%= link_to 'Owners', owners_path, class: 'btn btn-info' %>